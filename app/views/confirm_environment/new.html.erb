<% content_for :title, "Confirm you want to make changes to #{HostingEnvironment.environment_name}" %>

<div class="govuk-grid-row-two-thirds">
  <h1 class="govuk-heading-xl">Confirm you want to make changes to this environment</h1>
  <p class="govuk-body">This is the <strong><%= HostingEnvironment.environment_name %></strong> environment.</p>

  <%= form_with(url: confirm_environment_path, model: @confirmation) do |f| %>
    <%= f.hidden_field :from %>
    <%= f.govuk_text_field :environment, label: { text: "Type ‘#{HostingEnvironment.environment_name}’ to confirm that you want to proceed", size: 's' }, width: 20 %>
    <%= f.govuk_submit t('continue') %>
  <% end %>
</div>
